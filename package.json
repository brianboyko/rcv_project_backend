{
  "name": "rcv_project_backend",
  "version": "1.0.0",
  "description": "Backend for the RCV project",
  "main": "src/index.ts",
  "repository": "https://github.com/brianboyko/rcv_project_backend.git",
  "author": "Brian Boyko <brian.boyko@gmail.com>",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "auth0-js": "^9.9.0",
    "auth0-lock": "^11.12.1",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "express-jwt-authz": "^2.3.1",
    "jest": "^24.7.1",
    "jwks-rsa": "^1.3.0",
    "lodash": "^4.17.11",
    "luxon": "^1.9.0",
    "moment": "^2.24.0",
    "mongodb": "^3.2.3",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "pg": "^7.7.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "2.1.8",
    "rrule": "^2.5.6",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "build": "rm -rf dist && tsc",
    "start": "yarn build && nodemon dist/index.js",
    "start:dev": "NODE_ENV=development yarn build && nodemon dist/index.js",
    "pretest": "NODE_ENV=test",
    "test": "jest --watch",
    "prettier": "prettier --write './src/**/*.ts'"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/auth0-js": "^8.11.8",
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.17.0",
    "@types/cors": "^2.8.4",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/knex": "^0.16.1",
    "@types/lodash": "^4.14.123",
    "@types/luxon": "^1.4.1",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^3.1.22",
    "@types/morgan": "^1.7.35",
    "@types/node": "^11.13.4",
    "@types/pg": "^7.4.11",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "prettier": "^1.15.3",
    "ts-jest": "^24.0.2",
    "tslint-config-prettier": "^1.17.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!**/*.d.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.(j|t)s?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).(j|t)s?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "web.js",
      "js",
      "web.jsx",
      "jsx",
      "json",
      "node",
      "mjs"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    }
  }
}
